<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="id.sch.smktelkom_mlg.privateassignment.xirpl516.telkomxii.fragment.About">

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:id="@+id/click"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/imageViewPoster"
                android:layout_width="320dp"
                android:layout_height="350dp"
                android:layout_gravity="center"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:clickable="true"
                android:paddingTop="20dp"
                android:scaleType="fitXY"
                android:src="@drawable/louisa" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="right|bottom"
                android:orientation="vertical"
                android:paddingBottom="5dp"
                android:paddingRight="20dp">

                <TextView
                    android:id="@+id/text1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentTop="true"
                    android:paddingLeft="@dimen/album_title_padding"
                    android:paddingTop="@dimen/album_title_padding"
                    android:text="NAMA : "
                    android:textColor="@color/album_title"
                    android:textSize="20dp" />

                <TextView
                    android:id="@+id/textViewName"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentTop="true"
                    android:paddingLeft="@dimen/album_title_padding"
                    android:text="LOUISA GABRIELLA"
                    android:textColor="@color/album_title"
                    android:textSize="@dimen/album_title" />

                <TextView
                    android:id="@+id/text2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentTop="true"
                    android:paddingLeft="@dimen/album_title_padding"
                    android:paddingTop="@dimen/album_title_padding"
                    android:text="SEKOLAH : "
                    android:textColor="@color/album_title"
                    android:textSize="20dp" />

                <TextView
                    android:id="@+id/coming_textViewDate"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingLeft="@dimen/album_title_padding"
                    android:text="SMKS TELKOM MALANG"
                    android:textColor="@color/album_title"
                    android:textSize="14dp" />

                <TextView
                    android:id="@+id/text3"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentTop="true"
                    android:paddingLeft="@dimen/album_title_padding"
                    android:paddingTop="@dimen/album_title_padding"
                    android:text="JURUSAN : "
                    android:textColor="@color/album_title"
                    android:textSize="20dp" />

                <TextView
                    android:id="@+id/textViewDesc"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/textViewName"
                    android:maxLines="3"
                    android:paddingBottom="@dimen/songs_count_padding_bottom"
                    android:paddingLeft="@dimen/album_title_padding"
                    android:paddingRight="@dimen/album_title_padding"
                    android:text="REKAYASA PERANGKAT LUNAK"
                    android:textSize="@dimen/songs_count" />

                <TextView
                    android:id="@+id/text4"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/textViewName"
                    android:layout_gravity="right"
                    android:maxLines="3"
                    android:paddingBottom="@dimen/songs_count_padding_bottom"
                    android:paddingLeft="@dimen/album_title_padding"
                    android:paddingRight="@dimen/album_title_padding"
                    android:paddingTop="10dp"
                    android:text="copyright@2017"
                    android:textSize="@dimen/songs_count" />
            </LinearLayout>

        </LinearLayout>
    </LinearLayout>

</FrameLayout>
